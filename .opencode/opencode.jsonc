{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "openai": {
      "name": "openai",
      "npm": "@ai-sdk/openai",
      "options": {
        "baseURL": "https://code.ppchat.vip/v1",
        "apiKey": "{env:OPENAI_API_KEY}",
        "timeout": 30000
      },
      "models": {
        "xinhui-0.1": {
          "name": "xinhui-0.1",
          "id": "gpt-5.2"
        }
      }
    },
    "zhipuai-coding-plan": {
      "name": "Zhipu AI Coding Plan",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "https://open.bigmodel.cn/api/coding/paas/v4",
        "apiKey": "{env:ZHIPU_API_KEY}",
        "timeout": 30000
      },
      "models": {
        "glm-4.6v-flash": {
          "name": "GLM-4.6V-Flash",
          "id": "glm-4.6v-flash"
        }
      }
    }
  },
  "model": "opencode/minimax-m2.1-free",
  "small_model": "opencode/minimax-m2.1-free",
  "mcp": {
    "xinhui-backend": {
      "type": "remote",
      "url": "http://127.0.0.1:8000/api/mcp?token={env:XINHUI_MCP_TOKEN}",
      "enabled": true
    }
  },
  "default_agent": "clinical",
  "agent": {
    // 禁用内置 cpet，使用自定义 agents
    "cpet": { "disable": true }
  }
}
