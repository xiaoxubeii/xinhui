# Qwen API (用于 AI Agent)
QWEN_API_KEY=your_qwen_api_key_here

# OpenAI/Codex API
OPENAI_API_KEY=your_openai_api_key_here

# Diet Vision Model (food photo recognition via OpenCode)
# If not set, backend uses OPENCODE_BASE_URL and default model from .opencode/opencode.jsonc.
DIET_VISION_BASE_URL=http://127.0.0.1:4096
DIET_VISION_MODEL=zhipuai-coding-plan/glm-4.6v-flash
DIET_VISION_TIMEOUT=30
DIET_VISION_TEMPERATURE=0.2
DIET_VISION_MAX_TOKENS=800
DIET_MAX_IMAGE_BYTES=1500000

# 数据文件路径
CPET_DATA_FILE=/path/to/cpet_data.h5

# PaceFormer 模型配置
CPET_PACE_CONFIG=/path/to/pace_former_config.yaml
CPET_PACE_CHECKPOINT=/path/to/best_model.pth
CPET_PACE_DEVICE=cpu

# OpenCode 配置
OPENCODE_BASE_URL=http://127.0.0.1:4096
OPENCODE_DIRECTORY=/home/cheng/workspace/xinhui

# Zhipu AI (OpenCode provider)
ZHIPU_API_KEY=your_zhipu_api_key_here

# 服务器配置
CPET_CORS_ORIGINS=*

# Xinhui Auth / Storage
# IMPORTANT: Set a strong secret in production.
XINHUI_JWT_SECRET=dev-secret-change-me
XINHUI_TOKEN_TTL_DAYS=7
XINHUI_DATA_ROOT=./data
XINHUI_DB_PATH=./data/xinhui.db
XINHUI_COOKIE_SECURE=0
XINHUI_MAX_UPLOAD_MB=20
XINHUI_MCP_TOKEN=dev-mcp-token
